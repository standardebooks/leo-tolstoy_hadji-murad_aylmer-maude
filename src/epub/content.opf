		<dc:title id="title">Hadji Murád</dc:title>
		<meta property="file-as" refines="#title">Hadji Murád</meta>
		<dc:subject id="subject-1">Tolstoy, Leo, graf, 1828-1910--Translations into English.</dc:subject>
		<meta property="authority" refines="#subject-1">LCSH</meta>
